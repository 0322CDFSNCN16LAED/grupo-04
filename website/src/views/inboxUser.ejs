<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

    <main class="imagen-fondo-mobile justify-center">
      <div class="fx justify-sp-b text-right font-xlarge">
        <h2 class="m-3 font-xlarge bolder lapt-shop-title">Bandeja de Entrada</h2>
        <button class="primary-button">
          <a href="/budget/request">Nueva Solicitud</a>
        </button>
      </div>
      <section class="row row-cols-1 row-cols-md-2 g-4">
        <% for (let i = 0; i < budgets.length; i++) {%>
          <% const budgetToShow = budgets[i] %> 
          <% const id =  "id"+(i.toString()) %>           
        
          <div class="card" style="width: 18rem;">
          <% if (budgetToShow.req_imgs && budgetToShow.req_imgs.length > 0) { %>            
          <a
            target="_blank"
            href="/images/budgetRequest/<%= budgetToShow.req_imgs[0].img %> %>"
          >
            <img
              class="card-img-top"
              src="/images/budgetRequest/<%= budgetToShow.req_imgs[0].img %>"
            />
          </a>
          <% } %>
          <div class="card-body">
            <h5 class="card-title text-center bolder">
              <%= budgetToShow.tituloSolicitud %>
            </h5>
            <p class="card-text text-center">
              Presupuestos Recibidos
            </p>
            <div id="<%= id %>" class="carousel slide" data-interval="false">
              <div class="carousel-inner">
                <% for (let index = 0; index < budgetToShow.budget_response.length; index++) {%>
                <% const response = budgetToShow.budget_response[index];%>                  
                
                <div class="<%=  index === 0 ? "carousel-item active": "carousel-item"  %>">                 
                  
                            
                    <%- include('./partials/inboxUserCards', {response}); %>  
                  </div>
              <% } %>                
              </div>
              <% if (budgetToShow.budget_response.length > 0) { %>
                <button class="carousel-control-prev" type="button" data-bs-target="#<%= id %>" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#<%= id %>" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
               
              <% } %>
            </div>
          </div>
        </div>
          <% } %>
      </section>
    </main>

    <%- include('./partials/footer') %> 

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
