<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <script src="/js/login.js"></script>

  <body>
    <%- include('./partials/header') %>

    <main class="imagen-fondo-mobile main-fx-size">
      <div class="align-center justify-center login-desk">
        <div class="grey-opacity profile-box">
          <div>
            <p class="font-large text-center mb-3">Iniciar sesión</p>
            <p></p>
          </div>

          <div>
            <form action="/login" method="POST" id="formulario" novalidate>
              <div class="col mt-3">
                <label class="font-medium visually-hidden">E-mail</label>
                <input
                  type="email"
                  name="email"
                  class="form-control"
                  placeholder="E-mail"
                  aria-label="E-mail"
                  value="<%= locals.oldData ? oldData.email : null %>"
                />
                <span class="error"></span>
                <% if (locals.errors && errors.email) {%>
                <div class="error-msg"><%= errors.email.msg %></div>
                <% } %>
              </div>
              <div class="col mt-3">
                <label class="font-medium visually-hidden">Contraseña</label>
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  placeholder="Contraseña"
                  aria-label="Contraseña"
                />
                <span class="error"></span>
                <% if (locals.errors && errors.password) {%>
                <div class="error-msg"><%= errors.password.msg %></div>
                <% } %>
              </div>

              <div class="text-right">
                <a href="#" class="font-azul font-small"
                  >Olvidé mi contraseña</a
                >
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="recordarDatos"
                />
                <label class="form-check-label" for="flexCheckDefault">
                  Recordar mis datos
                </label>
              </div>
              <div class="fx justify-center mt-3">
                <button class="primary-button" type="submit">Ingresar</button>
              </div>
            </form>
            <div class="fx justify-center text-center">
              <ul class="m-3">
                <li class="mb-3 font-small">
                  <a href="#"
                    ><i class="fab fa-google"></i> Ingresar con Google</a
                  >
                </li>
                <li class="mb-3 font-small">
                  <a href="#"
                    ><i class="fab fa-facebook-square"></i> Ingresar con
                    Facebook</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('./partials/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
