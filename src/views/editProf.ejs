<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    
    <%- include('./partials/header') %>

    <main class="imagen-fondo-mobile fx justify-center">
        <div class="fx justify-center"></div>
             <div class="grey-opacity profile-box-edit desk-size">
                <div>
                    <h3 class="text-center">Hola <%= user.name %> <%= user.lastName %>  </h3>
                    <p class="font-mediun text-center mb-3-login">Actualizá tus datos</p>
                </div>
                <form action="/prof/update/<%= user.profId %>?_method=PUT"  method="POST" enctype="multipart/form-data">
                    
                    <div class=" map-column">
                        <div>
                            <div class="row mt-3">
                                <div class="col">
                                    <label for="name">Nombre</label>
                                    <input 
                                        type="text" 
                                        name= "name" 
                                        value="<%= user.name %>"     
                                        class="form-control <%= 
                                            locals.errors && errors.name 
                                            ? 'is-invalid' 
                                            : null 
                                        %>"
                                        placeholder="Nombre"
                                        value="<%= locals.oldData ? oldData.name : null %>" 
                                    >
                                    <% if (locals.errors && errors.name) { %>
                                        <div class= "error-msg">
                                            <%= errors.name.msg %>               
                                        </div>
                                    <% } %>                                    
                                </div>
                                <div class="col">
                                    <label for="lastName">Apellido</label>
                                    <input 
                                        type="text" 
                                        name="lastName" 
                                        value="<%= user.lastName %>"
                                        class="form-control <%= 
                                            locals.errors && errors.lastName 
                                            ? 'is-invalid' 
                                            : null 
                                        %>" 
                                        value="<%= locals.oldData ? oldData.lastName : null %>"
                                    >
                                    <% if (locals.errors && errors.lastName) { %>
                                        <div class= "error-msg">
                                            <%= errors.lastName.msg %>               
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                            <div class="col-auto mt-3">
                                
                                <label for="userName">Nombre de Usuario</label>
                                <div class="input-group">
                                    <div class="input-group-text">@</div>
                                    <input 
                                        type="text" 
                                        name= "userName" 
                                        value="<%= user.userName %>"
                                        class="form-control <%= 
                                            locals.errors && errors.userName 
                                            ? 'is-invalid' 
                                            : null 
                                        %>" 
                                        placeholder="Nombre de usuario"
                                        value="<%= locals.oldData ? oldData.userName : null %>"
                                    >                                 
                                </div>
                                <% if (locals.errors && errors.userName) { %>
                                    <div class= "error-msg">
                                        <%= errors.userName.msg %>               
                                    </div>
                                <% } %>
                            </div>
                            <div class="col mt-3 mb-3">
                                <label for="email">Email</label>
                                <input 
                                    type="email" 
                                    name= "email" 
                                    value="<%= user.email %>"
                                    class="form-control <%= 
                                        locals.errors && errors.email 
                                        ? 'is-invalid' 
                                        : null 
                                    %>"
                                    placeholder="E-mail"                                    
                                >
                                <% if (locals.errors && errors.email) { %>
                                    <div class= "error-msg">
                                        <%= errors.email.msg %>               
                                    </div>
                                <% } %>
                            </div>
                             <div class="col mb-3">
                                <label for="password">Contraseña</label>
                                <input 
                                    type="password" 
                                    name= "password" 
                                    class="form-control <%= 
                                        locals.errors && errors.password 
                                        ? 'is-invalid' 
                                        : null 
                                    %>" 
                                    placeholder="Contraseña"
                                >
                                <% if (locals.errors && errors.password) { %>
                                    <div class= "error-msg">
                                        <%= errors.password.msg %>               
                                    </div>
                                <% } %>
                            </div>
                             <div class="col mb-3">
                                <label for="password">Repetir Contraseña</label>
                                <input 
                                    type="password" 
                                    name= "password" 
                                    class="form-control <%= 
                                        locals.errors && errors.password 
                                        ? 'is-invalid' 
                                        : null 
                                    %>" 
                                    placeholder="Repetir Contraseña"
                                >
                                <% if (locals.errors && errors.password) { %>
                                    <div class= "error-msg">
                                        <%= errors.password.msg %>               
                                    </div>
                                <% } %>
                            </div>
                            <div class="col mt-3">
                                <label for="phone">Teléfono</label>
                                <input 
                                    type="text" 
                                    name= "phone" 
                                    value="<%= user.phone %>"
                                    class="form-control <%= 
                                        locals.errors && errors.phone 
                                        ? 'is-invalid' 
                                        : null 
                                    %>" 
                                    placeholder="Teléfono"
                                    value="<%= locals.oldData ? oldData.phone : null %>"
                                >
                                <% if (locals.errors && errors.phone) { %>
                                    <div class= "error-msg">
                                        <%= errors.phone.msg %>               
                                    </div>
                                <% } %>
                            </div> 
                            <div class="col mt-3">
                                <label for="">DNI</label>
                                <input 
                                    type="text" 
                                    name="DNI" 
                                    value="<%= user.DNI %>"
                                    class="form-control <%= 
                                        locals.errors && errors.DNI 
                                        ? 'is-invalid' 
                                        : null 
                                    %>" 
                                    placeholder="DNI"                                   
                                >
                                <% if (locals.errors && errors.DNI) { %>
                                    <div class= "error-msg">
                                        <%= errors.DNI.msg %>               
                                    </div>
                                <% } %>
                            </div>
                            <div class="col mt-3">
                                <label for="IVA">Condición frente al IVA</label>
                                <input 
                                    type="text" 
                                    name="IVA" 
                                    value="<%= user.IVA %>"
                                    class="form-control <%= 
                                        locals.errors && errors.IVA 
                                        ? 'is-invalid' 
                                        : null 
                                    %>" 
                                    placeholder="Condición frente al IVA"
                                    value="<%= locals.oldData ? oldData.IVA : null %>"
                                >
                                <% if (locals.errors && errors.IVA) { %>
                                    <div class= "error-msg">
                                        <%= errors.IVA.msg %>               
                                    </div>
                                <% } %>
                            </div>
                            <div class="col mt-3">
                                <label for="CUIT">Cuit/Razón social</label>
                                <input 
                                    type="text" 
                                    name="CUIT" 
                                    value="<%= user.CUIT %>"
                                    class="form-control <%= 
                                        locals.errors && errors.CUIT 
                                        ? 'is-invalid' 
                                        : null 
                                    %>" 
                                    placeholder="Cuit/Razón social"                                    
                                >
                            </div>
                            <% if (locals.errors && errors.CUIT) { %>
                                <div class= "error-msg">
                                    <%= errors.CUIT.msg %>               
                                </div>
                            <% } %>
                            <div class="font-medium mt-3"> Rubros </div>
                            <div class="form-check">
                                <input 
                                    class="form-check-input" 
                                    name= "rubro" 
                                    type="checkbox" 
                                    value="Electricista" 
                                >
                                <label class="form-check-label" for="Electricista">
                                    Electricista
                                </label>
                            </div>
                            <div class="form-check">
                                <input 
                                    class="form-check-input" 
                                    name= "rubro" 
                                    type="checkbox" 
                                    value="Plomero" 
                                >
                                <label class="form-check-label" for="Plomero">
                                    Plomero
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" 
                                    name= "rubro" 
                                    type="checkbox" 
                                    value="Gasista" 
                                    id="Gasista">
                                <label class="form-check-label" for="Gasista">
                                    Gasista
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" 
                                    name= "rubro" 
                                    type="checkbox"
                                    value="Pintor" 
                                    id="Pintor">
                                <label class="form-check-label" for="Pintor">
                                    Pintor
                                </label>
                            </div>
                            <% if (locals.errors && errors.rubro) { %>
                                <div class= "error-msg">
                                    <%= errors.rubro.msg %>               
                                </div>
                            <% } %>
                           
                         
                            <div class="mt-3 fx align-center">                    
                                <label class="mr-3"><h4 class="font-medium">Horario</h4></label>
                                <select 
                                    name = "time" 
                                    class="form-select font-medium form-select-lg mb-3<%= 
                                    locals.errors && errors.time 
                                    ? 'is-invalid' 
                                    : null 
                                %>" "
                                >                                
                                <option value="">Elegí tu horario disponible</option>

                            <% const horarios = ["de 8 a 12","de 12 a 16","de 16 a 20"] %>

                            <% for( const unHorario of horarios) { %>                          

                                    <option 
                                        value="<%= unHorario %>"
                                        <%= locals.oldData && (unHorario === oldData.time) ? "selected" : null %> 
                                    > 
                                        <%= unHorario %>  
                                        
                                    </option>
                            <% } %>
                        </select>                                
                    </div>
                    <% if (locals.errors && errors.time) { %>
                        <div class= "error-msg">
                            <%= errors.time.msg %>               
                        </div>
                    <% } %>                                  
                           
                            <div class="font-mediun mb-5-login mt-3">
                                <label for="avatar" class="form-label"><h4 class="font-medium mb-0" >Foto de perfil</h4></label>
                                <div class="mb-3 fx align-center">                   
                                    <input 
                                        class="form-control" 
                                        type="file" 
                                        name= "avatar"
                                    >                                    
                                </div>  
                                <% if (locals.errors && errors.avatar) { %>
                                <div class= "error-msg">
                                    <%= errors.avatar.msg %>               
                                </div>
                                <% } %>                          
                            </div>                         
                        </div>           
                    </div>
                    <div class="fx justify-center mt-3">
                        <button class="primary-button" type="submit">
                            Guardar cambios
                        </button>  
                    </div>        
                </form>

            </div> 
        </div>    
    </main>

   <%- include('./partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>   
</body>

</html>