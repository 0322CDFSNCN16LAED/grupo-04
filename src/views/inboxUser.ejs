<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

    <main class="imagen-fondo-mobile justify-center">
      <div class="fx justify-sp-b text-right font-xlarge">
        <h2 class="m-3 font-xlarge bolder lapt-shop-title">
          Bandeja de Entrada
        </h2>
        <button class="primary-button">
          <a href="/budget/request">Nueva Solicitud</a>
        </button>
      </div>
      <section class="row row-cols-1 row-cols-md-2 g-4">
        <% userRequest.forEach(function(budgetToShow){ %>
          <div class="card" style="width: 22rem">
          <h3 class="text-center bolder">Tu Pedido</h3>
          <% if (budgetToShow.img && budgetToShow.img.length > 0) { %>
          <a
            target="_blank"
            href="/images/budgetRequest/<%= budgetToShow.img[0] %> %>"
          >
            <img
              class="card-img-top"
              src="/images/budgetRequest/<%= budgetToShow.img[0] %>"
            />
          </a>
          <% } %>
          <div class="card-body">
            <h5 class="card-title text-center bolder">
              <%= budgetToShow.tituloSolicitud %>
            </h5>

            <ul class="list-group list-group-flush">
              <li class="list-group-item text-center">
                <%= budgetToShow.detalleSolicitud %>
              </li>
            </ul>
            <h5 class="bolder text-center">
              Presupuestos Recibidos
            </h5>
            <% budgetToShow.responses.forEach(response => { %> 
                <div class="card text-bg-light mb-3" style="max-width: 18rem;">
                  <div class="fx align-center">
                      <div>
                      <div class="card-header bolder">Profesional </div>
                      <a href="/user/detail/<%= response.userId %>" class="font-medium text-center"><%= response.name %> <%= response.lastName %></a>
                      </div>
                      <div class="">
                      <img src="/images/avatar/<%=response.avatar %>" class="card-img-top" alt="">
                      </div>
                  </div>
                  <div class="card-body">
                      <h5 class="card-title">
                      <div class="fx justify-sp-b">
                          <p class="font-medium bolder">Monto total</p>
                          <p class="font-medium bolder">
                          $ <%= response.precioFinal %>
                          </p>
                      </div>
                      </h5>
                  </div>
                  <p class="card-text">
                      <div class="fx justify-sp-b">
                      <button class="secondary-button">
                          <a href="/budget/detail/<%= response.id %>">
                          Ver detalle
                          </a>
                      </button>
                      <button class="primary-button">
                          <a href="/budget/cart/<%= response.id %>"> Contratar </a>
                      </button>
                      </div>   
                  </p>
                </div>
              
            <% }) %>
          </div>
        </div>
          <% }) %>
      </section>
    </main>

    <%- include('./partials/footer') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
