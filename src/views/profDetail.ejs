<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    <%- include('./partials/header') %>


    <main class="imagen-fondo-mobile fx justify-center">

        <div class="fx justify-center"></div>
        <div class="grey-opacity profile-box desk-size">
            <form action="">
                <div class="fx justify-sp-a align-center">
                    <div class="user-pic" style="background-image:url('../images/avatar/<%= user.avatar %>')"></div>
                    
                    <div class="font-large"><%= user.name%></div>
                </div>

                <div class="fx map-column">
                    <div>
                        <div class="row mt-3">
                            <div class="col">
                                <p>Nombre</p>
                                <div class="form-control"><%= user.name %> </div>
                
                            </div>
                        </div>

                        
                    </div>
                    <div class="fx justify-center mt-3">
                        <button class="primary-button" type="submit">
                            <a href="#"> Actualizar mis datos</a>
                        </button>  
                    </div>
        
                </form>


                        <div class="col-auto mt-3">
                            <p>Nombre de Usuario</p>
                            <div class="input-group">
                                <div class="input-group-text mb-auto">@</div>
                                <p class="form-control"><%= user.userName %> </p>
                            </div>
                        </div>

                        <div class="col mt-3 mb-3">
                            <p>Correo</p>
                            <p class="form-control"><%= user.email %> </p>

                        </div>

                        <div class="font-mediun mb-5-login mt-3">
                            <div class="mb-3 fx align-center">
                                <label for="avatar" class="form-label">
                                    <h4 class="font-medium mb-0">Foto de perfil</h4>
                                </label>
                                <input class="form-control" type="file" name="avatar" id="avatar">
                            </div>
                        </div>
                        <div class="col mt-3">
                            <p>Telefono</p>
                            <p class="form-control"><%= user.phone %></p>
                        </div>

                        <div class="col-12 mt-3 mb-3">
                            <label for="Dirección" class="form-label visually-hidden">Dirección</label>
                            <input type="text" class="form-control" id="Dirección" placeholder="Dirección">
                        </div>
                        <div class="row g-3">
                            <div class="col-sm-7">
                                <input type="text" class="form-control" placeholder="Ciudad" aria-label="Ciudad">
                            </div>
                            <div class="col-sm">
                                <input type="text" class="form-control" placeholder="Provincia" aria-label="Provincia">
                            </div>
                            <div class="col-sm">
                                <input type="text" class="form-control" placeholder="Código postal"
                                    aria-label="Código postal">
                            </div>
                        </div>

                    </div>

                    <div class="fx justify-center mt-3  map-desk">
                        <div class="map" style="background-image:url('../images/profile-map.png')"></div>
                    </div>

                </div>
                <div class="fx justify-center mt-3">
                    <button class="budg-button" type="submit">
                        <a href="#"> Actualizar mis datos</a>
                    </button>
                </div>

            </form>

        </div>
        </div>
    </main>




    <%- include('./partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous">
    </script>
</body>

</html>