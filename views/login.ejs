<body>
 <header>
        <div class="main-header">
            <i class="fas fa-bars hamburguer"></i>
            <img src="/images/logo-repara-ya.svg" alt="esto es un logo de repara ya" class="logo">
            <i class="fa-regular fa-circle-user"></i>
        </div>
    </header>

    <header class="bg-orange">
        <div class="lapt-desk-header">
            <img src="/images/logoReparaYaDesktop.svg" alt="Logo Repara Ya" class="logo fx">
            <form class="search-bar fx">
                <input type="text" class="" placeholder="Buscá el servicio que necesitás">
                <button><i class="fas fa-search"></i></button>

            </form>
            <p class=""><a href="/login" class="right-bar">Ingresá</a></p>
            <p class=""><a href="/register" class="right-bar">Registrate</a></p>

        </div>

        <div class="header-bar">
            <ul class="fx">
                <li><a href="">Mi perfil</a></li>
                <li><a href="">Notificaciones</a></li>
                <li><a href="">Historial</a></li>
                <li><a href="">Categorias</a></li>
                <li><a href="/product/cart">Mi carrito</a></li>
            </ul>
        </div>
    </header>

    <main class="imagen-fondo-mobile main-fx-size">
        <section>
            <div class="fx align-center justify-center" >
                
                <div class="cajaformulario">
                    <div>
                        <p class="font-large text-center mb-3">Iniciar sesión<p>
                    </div>    
                    <div>
                        <form action="" method="">
                            <div class="login-form-box ">
                                <label class="font-mediun ">E-mail</label>
                                <input type="email" name="email">
                            </div>
                            <div class="login-form-box">
                                <label class="font-mediun">Contraseña</label>
                                <input type="password" name="password">
                            </div>
                            <div class="text-right">
                                <a href="#" class="font-azul font-small">Olvidé mi contraseña</a>
                            </div>
                            <div class="text-left mb-5 font-xsmall">
                                <input 
                                    type="checkbox" 
                                    name="recordarDatos" 
                                    value="recordarDatos" 
                                    id="recordarDatos" 
                                />
                                <label for="recordarDatos">Recordar mis datos</label>
                            </div>
                            <div class="text-center">
                                <button class="budg-button-login font-large">Ingresar</button>    
                            </div>
                        </form> 
                        <div class="fx justify-center text-center">
                            <ul class="m-3">
                                <li class="mb-3 font-small"><a href="#"><i class="fab fa-google"></i> Ingresar con Google</a></li>
                                <li class="mb-3 font-small"><a href="#"><i class="fab fa-facebook-square"></i></a> Ingresar con Facebook</li>
                            </ul>
                        </div>                   
                    </div>
                </div>
            </div>

        </section>
    </main>

    <footer class="bg-orange">
        <nav class="nav-bar">
            <ul class="descarga">
                 <li class="font-white footer-title"> Descargá la app </li>
                <li class="mr-15"><a href=""><i class="fa-brands fa-google-play google-descarga"></i></a></li>
                <li><a href=""></a><i class="fa-brands fa-apple apple-descarga"></i></li>
            </ul>
            <ul class=" redes">
                <li class="font-white footer-title"> Redes </li>
                <li class="mr-11"><a href="#"><i class="fa-brands fa-instagram"></i></a></li>
                <li class="mr-11"><a href="#"><i class="fa-brands fa-facebook"> </i></a></li>
                <li class="mr-11"><a href="#"><i class="fa-brands fa-twitter"></i></a></li>
